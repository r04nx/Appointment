generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Appointment {
  id        String   @id @default(cuid())
  date      String
  time      String
  endTime   String?
  status    String   @default("available")
  with      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date, time])
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}